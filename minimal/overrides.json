{
  "@jupyter-lsp/jupyterlab-lsp:plugin": {
    "language_servers": {
      "pylsp": {
        "serverSettings": {
          "pylsp.plugins.pycodestyle.enabled": true,
          "pylsp.plugins.pycodestyle.ignore": ["E203", "E265", "E302", "E303", "E305", "E402"],
          "pylsp.plugins.pycodestyle.maxLineLength": 120,
          "pylsp.plugins.pyflakes.enabled": true,
          "pylsp.plugins.mccabe.enabled": false,
          "pylsp.plugins.autopep8.enabled": false,
          "pylsp.plugins.yapf.enabled": false
        }
      }
    }
  },
  "jupyterlab_code_formatter:settings": {
    "preferences": {
      "default_formatter": {
        "python": ["ruff", "ruffformat"]
      }
    },
    "ruff": {
      "args": [
        "--extend-select=I",
        "--unfixable=F401,F841",
        "--ignore=E203,E265,E302,E303,E305,E402",
        "--line-length=120",
        "--target-version=py313"
      ]
    },
    "ruffformat": {
      "args": [
        "--line-length=120"
      ]
    },
    "formatOnSave": false,
    "suppressFormatterErrorsIFFAutoFormatOnSave": true
  }
}
